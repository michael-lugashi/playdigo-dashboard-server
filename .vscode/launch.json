{
  "version": "0.2.0",
  "configurations": [
    {
      "type": "node",
      "request": "launch",
      "name": "Run with TSX",
      "runtimeExecutable": "tsx",
      "args": ["--watch", "--env-file", ".env", "src/app.ts"],
      "cwd": "${workspaceFolder}",
      "console": "integratedTerminal",
      "internalConsoleOptions": "neverOpen",
      "killBehavior": "forceful"
    }
  ]
}
